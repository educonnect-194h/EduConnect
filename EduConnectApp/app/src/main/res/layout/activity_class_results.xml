<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassResultsActivity"
    android:id="@+id/ClassResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <!-- Status Bar Label -->
        <RelativeLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/paly_logo"
                android:tint="@color/background"/>

            <!-- calendar button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp">

                <ImageButton
                    android:id="@+id/pastDataButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/calendar"
                    android:tint="@color/background"
                    android:background="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:onClick="goToCalendar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Past Data"
                    android:textSize="10dp"
                    android:textColor="@color/background"
                    android:fontFamily="@font/avenir"/>

            </LinearLayout>


        </RelativeLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/header"
            android:layout_below="@id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/avenir"
            android:gravity="center" />

        <TextView
            android:id="@+id/date"
            android:layout_below="@id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:textStyle="normal"
            android:textColor="@color/background"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/avenir"
            android:gravity="center"
            android:paddingBottom="10dp" />


        <!-- Pie Chart -->
        <ImageView
            android:id="@+id/piechart"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_margin="30dp"
            android:src="@drawable/graph"
            android:layout_gravity="center"/>


    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_peekHeight="55dp"
        android:id="@+id/bottom_sheet"
        android:background="@drawable/edit_text_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!--Students who feel-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/avenir"
            android:gravity="center"
            android:text="Students who feel..."
            android:textColor="@color/darkGray"
            android:textSize="25dp"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <!--big emoji-->
            <ImageView
                android:id="@+id/today_emoji"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/background"
                android:layout_gravity="center_horizontal"
                android:padding="7dp"
                android:src="@drawable/sick"/>

        </LinearLayout>

        <!-- students section -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <!-- Hannah Leou -->
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user_female"
                    android:tint="@color/darkGray" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir"
                    android:text="Hannah Leou"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/darkGray" />
            </LinearLayout>

            <!-- Julia Wong -->
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user_female"
                    android:tint="@color/darkGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir"
                    android:text="Julia Wong"
                    android:textColor="@color/darkGray" />
            </LinearLayout>

        </GridLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
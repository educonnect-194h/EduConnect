<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassResultsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <!-- Status Bar Label -->
        <RelativeLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/paly_logo"
                android:tint="@color/background"/>

            <!-- calendar button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp">

                <ImageButton
                    android:id="@+id/pastDataButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/calendar"
                    android:tint="@color/background"
                    android:background="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:onClick="goToCalendar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Past Data"
                    android:textSize="10dp"
                    android:textColor="@color/background"
                    android:fontFamily="@font/avenir"/>

            </LinearLayout>


        </RelativeLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/header"
            android:layout_below="@id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/avenir"
            android:gravity="center" />

        <TextView
            android:id="@+id/date"
            android:layout_below="@id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:textStyle="normal"
            android:textColor="@color/background"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/avenir"
            android:gravity="center"
            android:paddingBottom="10dp" />


        <!-- Pie Chart -->
        <ImageView
            android:id="@+id/piechart"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_margin="30dp"
            android:src="@drawable/graph"
            android:layout_gravity="center"/>

        <!-- details section -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/appentry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- More Details Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/darkGray"
                android:textSize="20dp"
                android:text="More Details"
                android:fontFamily="@font/avenir"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"/>

            <!-- FLAGGED STUDENTS -->

            <RelativeLayout
                android:id="@+id/flaggedStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/redFlags"
                    android:onClick="onRedFlagsClick"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/class_section"
                    android:paddingVertical="13dp"
                    android:paddingLeft="22dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/flag"
                    android:tint="@color/darkGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Flagged Students"
                    android:textColor="@color/darkGray"
                    android:textSize="16dp"
                    android:fontFamily="@font/avenir"
                    android:layout_marginLeft="90dp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_arrow"
                    android:backgroundTint="@color/darkGray"
                    android:scaleType="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!-- DETAILS BUTTON -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/moreDetails"
                    android:onClick="onMoreDetailsClick"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/class_section"
                    android:paddingVertical="13dp"
                    android:paddingLeft="22dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/file"
                    android:tint="@color/darkGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Data Breakdown"
                    android:textColor="@color/darkGray"
                    android:textSize="16dp"
                    android:fontFamily="@font/avenir"
                    android:layout_marginLeft="90dp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_arrow"
                    android:backgroundTint="@color/darkGray"
                    android:scaleType="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
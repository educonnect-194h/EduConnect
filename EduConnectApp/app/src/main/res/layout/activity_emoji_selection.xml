<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SubmissionScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:windowSoftInputMode="adjustResize">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"

        tools:context=".SubmissionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7500dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <!-- Status Bar Label -->
            <RelativeLayout
                android:id="@+id/statusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:src="@drawable/paly_logo"
                    android:tint="#fff" />
            </RelativeLayout>

            <!-- store class title -->
            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir"
                android:text=""
                android:visibility="gone" />

            <!--Today I feel-->
            <TextView
                android:id="@+id/todayIFeel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:text="Today, I feel..."
                android:textColor="@color/background"
                android:textSize="28dp" />

            <!--Choose one-->
            <TextView
                android:id="@+id/chooseOneFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:text="Choose one:"
                android:textColor="@color/darkGray"
                android:textSize="22dp" />


            <!-- expanding words spinner -->
            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="20dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:orientation="horizontal">-->

            <!--<Spinner-->
            <!--android:id="@+id/conjunction_spinner"-->
            <!--android:layout_width="155dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:background="@null"-->
            <!--android:spinnerMode="dropdown" />-->


            <!--</LinearLayout>-->


            <!-- emojis -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <!-- first row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- fiesty emoji -->
                    <ImageButton
                        android:id="@+id/feisty_emoji"
                        android:scaleType="fitCenter"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/feisty"
                        android:onClick="onEmojiClick"
                        android:background="@color/colorPrimaryDark"
                        android:padding="7dp"/>

                    <!-- grinning emoji -->
                    <ImageButton
                        android:id="@+id/grinning_emoji"
                        android:scaleType="fitCenter"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/grinning"
                        android:onClick="onEmojiClick"
                        android:background="@color/colorPrimaryDark"
                        android:padding="7dp"/>

                    <!-- sunglasses emoji -->
                    <ImageButton
                        android:id="@+id/sunglasses_emoji"
                        android:scaleType="fitCenter"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/sunglasses"
                        android:onClick="onEmojiClick"
                        android:background="@color/colorPrimaryDark"
                        android:padding="7dp"/>


                </LinearLayout>

                <!-- second row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- sleepy emoji -->
                    <ImageButton
                        android:id="@+id/sleepy_emoji"
                        android:scaleType="fitCenter"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/sleepy"
                        android:onClick="onEmojiClick"
                        android:background="@color/colorPrimaryDark"
                        android:padding="7dp"/>

                    <!-- neutral emoji -->
                    <ImageButton
                        android:id="@+id/neutral_emoji"
                        android:scaleType="fitCenter"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/neutral"
                        android:onClick="onEmojiClick"
                        android:background="@color/colorPrimaryDark"
                        android:padding="7dp"/>

                    <!-- sick face -->
                    <ImageButton
                        android:id="@+id/sick_emoji"
                        android:scaleType="fitCenter"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/sick"
                        android:onClick="onEmojiClick"
                        android:background="@color/colorPrimaryDark"
                        android:padding="7dp"/>

                </LinearLayout>

                <!-- third row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <!-- sad emoji -->
                    <ImageButton
                        android:id="@+id/sad_emoji"
                        android:scaleType="fitCenter"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/sad"
                        android:onClick="onEmojiClick"
                        android:background="@color/colorPrimaryDark"
                        android:padding="7dp"/>

                    <!-- anxious emoji -->
                    <ImageButton
                        android:id="@+id/anxious_emoji"
                        android:scaleType="fitCenter"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/anxious"
                        android:onClick="onEmojiClick"
                        android:background="@color/colorPrimaryDark"
                        android:padding="7dp"/>

                    <!-- angry emoji -->
                    <ImageButton
                        android:id="@+id/angry_emoji"
                        android:scaleType="fitCenter"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/angry"
                        android:onClick="onEmojiClick"
                        android:background="@color/colorPrimaryDark"
                        android:padding="7dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- next button -->
            <Button
                android:id="@+id/nextBtn"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="40dp"
                android:background="@drawable/rounded_rectangle_white"
                android:fontFamily="@font/avenir"
                android:onClick="onNextButtonClick"
                android:text="next"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="23dp"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
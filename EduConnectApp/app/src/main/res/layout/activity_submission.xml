<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SubmissionScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:windowSoftInputMode="adjustResize">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"

        tools:context=".SubmissionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="660dp"
            android:layout_marginBottom="8dp"
            android:background="@color/background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <!-- Status Bar Label -->
            <RelativeLayout
                android:id="@+id/statusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:src="@drawable/paly_logo"
                    android:tint="#fff" />
            </RelativeLayout>

            <!--Today I feel-->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:text="Today, I feel..."
                android:textColor="@color/darkGray"
                android:textSize="25dp" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                <!--big emoji-->
                <ImageView
                    android:id="@+id/today_emoji"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@color/background"
                    android:layout_gravity="center_horizontal"
                    android:padding="7dp"
                    android:src="@drawable/feisty"/>

                <!--emoji lists-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!-- very angry emoji -->
                    <ImageView
                        android:id="@+id/angry"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/background"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/angry" />

                    <!-- sick emoji -->
                    <ImageView
                        android:id="@+id/sick"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/background"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sick" />

                    <!-- sad emoji -->
                    <ImageView
                        android:id="@+id/sad"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/background"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sad" />

                    <!-- sleepy emoji -->
                    <ImageView
                        android:id="@+id/sleepy"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/background"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sleepy" />

                    <!-- neutral face emoji -->
                    <ImageView
                        android:id="@+id/neutral"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/background"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/neutral" />

                    <!-- sunglasses emoji -->
                    <ImageView
                        android:id="@+id/sunglasses"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/background"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sunglasses" />

                    <!-- grinning face emoji -->
                    <ImageView
                        android:id="@+id/grinning"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/background"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/grinning" />

                    <!-- feisty emoji -->
                    <ImageView
                        android:id="@+id/feisty"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/background"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/feisty" />
                </LinearLayout>


                <SeekBar
                    android:id="@+id/sb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="7"
                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:thumb="@drawable/tickbar" />
            </LinearLayout>



            <!-- expanding words spinner -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/conjunction_spinner"
                    android:layout_width="155dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:spinnerMode="dropdown" />


            </LinearLayout>

            <!-- text response - expand answer -->
            <EditText
                android:id="@+id/descriptionEt"
                android:layout_width="340dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/avenir"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                app:itemMargin="5dp"
                android:lines="3"
                android:maxLines="5"
                android:minLines="2"
                android:scrollbars="vertical" />


            <!-- submit button -->
            <Button
                android:id="@+id/submitBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="40dp"
                android:background="@drawable/dashboard_button_available"
                android:fontFamily="@font/avenir"
                android:onClick="onSubmitClick"
                android:text="submit"
                android:textColor="@color/background" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <!-- Status Bar Label -->
        <RelativeLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/paly_logo"
                android:tint="#fff"/>
        </RelativeLayout>

        <!-- store class title -->
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"/>

        <!-- Thank you for submitting -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for submitting!"
            android:textSize="25dp"
            android:textColor="@color/darkGray"
            android:fontFamily="@font/avenir"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginVertical="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Edit Response -->
            <RelativeLayout
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:layout_marginBottom="8dp">

                <ImageButton
                    android:id="@+id/btnEditResponse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashboard_button_available"
                    android:src="@drawable/edit"
                    android:scaleType="fitStart"
                    android:paddingVertical="12dp"
                    android:paddingLeft="11dp"
                    android:tint="@color/background"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Response"
                    android:textColor="@color/background"
                    android:layout_marginLeft="45dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Return to Dashboard -->
            <RelativeLayout
                android:layout_width="190dp"
                android:layout_height="45dp">

                <ImageButton
                    android:id="@+id/btnBackToDashboard2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashboard_button_available"
                    android:src="@drawable/back_arrow"
                    android:tint="@color/background"
                    android:scaleType="fitStart"
                    android:paddingVertical="12dp"
                    android:paddingLeft="10dp"
                    android:onClick="onBackToDashClick"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return to Dashboard"
                    android:textColor="@color/background"
                    android:layout_marginLeft="45dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>